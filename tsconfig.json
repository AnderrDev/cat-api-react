{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@core/*": [
        "core/*"
      ],
      "@data/*": [
        "data/*"
      ],
      "@domain/*": [
        "domain/*"
      ],
      "@presentation/*": [
        "presentation/*"
      ]
    },
    "types": [
      "jest"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "**/node_modules",
    "**/Pods"
  ]
}